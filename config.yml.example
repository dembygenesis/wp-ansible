# =============================================================================
# WordPress Ansible Configuration
# Copy this to config.yml and customize
# =============================================================================

# -----------------------------------------------------------------------------
# Domain & SSL
# -----------------------------------------------------------------------------
domain: example.com
ssl_email: admin@example.com

# -----------------------------------------------------------------------------
# WordPress Admin (created on first deploy)
# -----------------------------------------------------------------------------
wp_admin_user: admin
wp_admin_password: CHANGE_ME_STRONG_PASSWORD
wp_admin_email: admin@example.com
wp_site_title: My WordPress Site

# -----------------------------------------------------------------------------
# WordPress Theme
# -----------------------------------------------------------------------------
# Theme slug from wordpress.org/themes/ OR a URL to a .zip file
wp_theme: flavor-flavor
# wp_theme: flavor-flavor (wordpress.org slug)

# -----------------------------------------------------------------------------
# Database Credentials
# -----------------------------------------------------------------------------
wp_db_name: wordpress
wp_db_user: wp_user
wp_db_password: CHANGE_ME_DB_PASSWORD
mysql_root_password: CHANGE_ME_ROOT_PASSWORD

# -----------------------------------------------------------------------------
# Ports (change if running multiple sites on same server)
# -----------------------------------------------------------------------------
wp_port: 3006
mysql_port: 3307

# -----------------------------------------------------------------------------
# Container Naming
# -----------------------------------------------------------------------------
container_prefix: wp

# -----------------------------------------------------------------------------
# Paths (usually don't need to change)
# -----------------------------------------------------------------------------
deploy_path: /opt/wordpress
nginx_sites_available: /etc/nginx/sites-available
nginx_sites_enabled: /etc/nginx/sites-enabled
