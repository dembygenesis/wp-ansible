# ===========================================
# WordPress Terraform Config
# Copy this to config.env and customize
# ===========================================

# Domain Configuration
DOMAIN=backup.gundam-link.net
SSL_EMAIL=demby@eufit.io

# Port Configuration
WP_PORT=3006
MYSQL_PORT=3307

# Container Names (auto-prefixed with domain)
CONTAINER_PREFIX=wp

# WordPress Settings
WP_DB_NAME=wordpress
WP_DB_USER=wp_user
WP_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD
MYSQL_ROOT_PASSWORD=CHANGE_ME_ROOT_PASSWORD

# Server Connection (for remote deployment)
SSH_HOST=eufit
SSH_USER=root

# Nginx Settings
NGINX_SITES_AVAILABLE=/etc/nginx/sites-available
NGINX_SITES_ENABLED=/etc/nginx/sites-enabled
